<h1>Listing boards</h1>

<%= side_nav_link_to 'Add Board', new_board_path if can? :create, Board %>

<div class="span10">
  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= truncate(board.description) %></td>
        <td><%= link_to 'Show', board, id: dom_id(board, :show), class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', {action: :edit, id: board}, id: dom_id(board, :edit), class: 'btn btn-mini btn-warning' if can? :update, board %></td>
        <td><%= link_to 'Delete', {action: :destroy, id: board}, data: {confirm: 'Are you sure?'}, method: :delete, id: dom_id(board, :delete), class: 'btn btn-mini btn-danger' if can? :destroy, board %></td>
      </tr>
    <% end %>
  </table>
  <%= paginate @boards %>
</div>


