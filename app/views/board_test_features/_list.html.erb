<table class="table table-striped table-condensed">
  <tbody>
      <% board_test_features.each do |board_test_feature| %>
          <tr>
            <% unless @board %><td><%= board_test_feature.board %></td><% end %>
            <td><%= board_test_feature.name %></td>
            <td><%= board_test_feature.score %></td>
            <td><%= link_to 'Show', polymorphic_path([@board,board_test_feature]), id: dom_id(board_test_feature, :show) %></td>
            <td><%= link_to 'Edit', polymorphic_path([@board,board_test_feature],action: 'edit'), id: dom_id(board_test_feature, :edit) if can? :update, board_test_feature %></td>
            <td><%= link_to 'Delete', polymorphic_path([@board,board_test_feature]), data: {confirm: 'Are you sure?'}, method: :delete, id: dom_id(board_test_feature, :delete) if can? :destroy, board_test_feature %></td>
          </tr>
      <% end %>
  </tbody>
</table>