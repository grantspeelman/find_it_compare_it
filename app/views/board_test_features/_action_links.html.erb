<% if @board %>
    <%= side_nav_link_to 'Add Test Feature', action: 'new' if !['new', 'create'].include?(params[:action]) && can?(:create,@board.test_features.new ) %>
    <% if @board_test_feature && !@board_test_feature.new? %>
        <%= side_nav_link_to 'Show Test Feature', board_board_test_feature_path(@board,@board_test_feature) if !['show'].include?(params[:action]) && can?(:read, @board_test_feature) %>
        <%= side_nav_link_to 'Edit Test Feature', edit_board_board_test_feature_path(@board,@board_test_feature) if !['edit', 'update'].include?(params[:action]) && can?(:edit, @board_test_feature) %>
    <% end %>
<% end %>
<% if @board %>
    <%= side_nav_link_to 'Show Board', board_path(@board) if can?(:read, @board) %>
    <%= side_nav_link_to 'Edit Board', edit_board_path(@board) if can?(:edit, @board) %>
<% end %>